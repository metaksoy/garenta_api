{
  "version": 2,
  "builds": [
    { "src": "api.php", "use": "@vercel/php" },
    { "src": "get_cities.php", "use": "@vercel/php" },
    { "src": "get_city.php", "use": "@vercel/php" },
    { "src": "src/**/*.php", "use": "@vercel/php" }
  ],
  "routes": [
    {
        "handle": "filesystem"
    },
    {
        "src": "/api.php",
        "dest": "/api.php"
    },
    {
        "src": "/get_cities.php",
        "dest": "/get_cities.php"
    },
    {
        "src": "/get_city.php",
        "dest": "/get_city.php"
    },
    {
        "src": "/(.*)",
        "dest": "/index.html"
    }
  ],
  "buildCommand": "npm install && npx tailwindcss -i ./src/input.css -o ./style.css"
}
